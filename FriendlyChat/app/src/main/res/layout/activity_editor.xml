<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EditorActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="Sender: "
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/edit_chat_author"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="Chat Owner"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/edit_chat_image"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="200dp" />

        <EditText
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_margin="5dp"
            android:hint="Description"
            android:id="@+id/edit_chat_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@android:color/holo_red_light"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/chat_update_button"
                android:text="Update Chat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:background="@android:color/holo_red_light"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/chat_delete_button"
                android:text="Delete Chat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>